{
  "name": "archcodex",
  "version": "1.38.0",
  "description": "The Architectural Compiler for LLM Agents - Transform architectural guidelines into executable constraints",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "archcodex": "./dist/bin/archcodex.js",
    "archcodex-mcp": "./dist/bin/archcodex-mcp.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "pkg": {
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64",
      "node18-linux-x64",
      "node18-win-x64"
    ],
    "outputPath": "binaries"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild dist/bin/archcodex.js --bundle --platform=node --target=node18 --outfile=dist/archcodex.cjs --format=cjs",
    "build:binary": "npm run build && npm run bundle && pkg dist/archcodex.cjs --compress GZip -o binaries/archcodex",
    "build:binary:macos": "npm run build && npm run bundle && pkg dist/archcodex.cjs --compress GZip -t node18-macos-arm64,node18-macos-x64 -o binaries/archcodex",
    "build:binary:linux": "npm run build && npm run bundle && pkg dist/archcodex.cjs --compress GZip -t node18-linux-x64 -o binaries/archcodex",
    "build:binary:windows": "npm run build && npm run bundle && pkg dist/archcodex.cjs --compress GZip -t node18-win-x64 -o binaries/archcodex",
    "dev": "tsx watch bin/archcodex.ts",
    "start": "node dist/bin/archcodex.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --coverage.thresholds.lines=80 --coverage.thresholds.functions=80 --coverage.thresholds.branches=70 --coverage.thresholds.statements=80",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run build && node dist/bin/archcodex.js check",
    "validate": "npm run typecheck && npm run lint && npm run test:ci && npm run check",
    "prepublishOnly": "npm run validate",
    "prepare": "husky"
  },
  "keywords": [
    "architecture",
    "constraints",
    "llm",
    "typescript",
    "validation",
    "cli"
  ],
  "author": "Stefan van Egmond",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArchCodexOrg/archcodex.git"
  },
  "homepage": "https://github.com/ArchCodexOrg/archcodex#readme",
  "bugs": {
    "url": "https://github.com/ArchCodexOrg/archcodex/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.2",
    "handlebars": "^4.7.8",
    "ignore": "^7.0.5",
    "ora": "^9.1.0",
    "simple-git": "^3.27.0",
    "ts-morph": "^27.0.2",
    "yaml": "^2.6.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.9",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "pkg": "^5.8.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
